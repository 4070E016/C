用for從1+2+3+到100

#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int i=1,sum=0;
	 for(i=1;i<=101;i=i+1)
	{
		sum+=i;
	}
	
	printf("1+2+3.....+100=%d\n",sum);
	
	system("pause");
	return 0;
}




用while從1+2+3+到100

#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int i=1,sum=0;
	 while(i<=101)
	{
		sum+=i;
		i=i+1;
	}
	
	printf("1+2+3.....+100=%d\n",sum);
	
	system("pause");
	return 0;
}




用do while從1+2+3+到100

#include <stdio.h>
#include <stdlib.h>
int main(void)
{
	int i=1,sum=0;
	do
	{
		sum+=i;
		i=i+1;
	}
	 while(i<=101);
	 
	printf("1+2+3.....+100=%d\n",sum);
	
	system("pause");
	return 0;
}
